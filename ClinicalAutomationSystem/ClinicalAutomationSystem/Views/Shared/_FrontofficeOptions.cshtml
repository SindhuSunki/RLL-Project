
@{
    ViewBag.Title = "_FrontofficeOptions";
}

<h2>FrontOffice</h2>

<div class="collapse navbar-collapse navbar-small" id="navbarColor02">


    <div class="align-nav">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                @Html.ActionLink("Add Patient", "AddPatient", "Frontoffice", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item active">
                @Html.ActionLink("Book Appointment", "BookAppointment", "Frontoffice", null, new { @class = "nav-link" })
            </li>

            <li class="nav-item active">
                @Html.ActionLink("View Appointment", "ViewAppointment", "Frontoffice", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item active">
                @Html.ActionLink("View Appointment By Patient", "ViewAppointmentByPatient", "Frontoffice", null, new { @class = "nav-link" })
