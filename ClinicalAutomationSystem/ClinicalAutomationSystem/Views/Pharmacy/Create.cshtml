@using DataProvider;
@model Medicine

@{
    ViewBag.Title = "Create";
    /* Layout = "~/Views/Shared/_PharmacyOptions.cshtml";*/
}

<br />
<link href="~/CSS/PharmacyIndex.css" rel="stylesheet" />

<div class="container">
    <form method="post" action="/Pharmacy/Create">
        <fieldset>
            <legend>Create Medicine:</legend>
            <div class="form-row justify-content-center">
                <div class="form-group w-50">
                    <label for="staticName">Name</label>
                    @Html.TextBoxFor(medi => medi.Name, new { type = "text", @class = "form-control", placeholder = "Enter Name", required = "required" })
                </div>
                <div class="form-group w-50">
                    <label for="exampleInputPrice">Price</label>
                    @Html.TextBoxFor(medi => medi.Price, new { type = "number", @class = "form-control", placeholder = "Enter Price", required = "required" })
                </div>
                <div class="form-group w-50">
                    <label for="exampleInputStock">Stock</label>
                    @Html.TextBoxFor(medi => medi.Stock, new { type = "number", @class = "form-control", placeholder = "Enter Stock", required = "required" })
                </div>
                <div class="form-group w-50">
                    <label for="exampleInputTax">Tax</label>
                    @Html.TextBoxFor(medi => medi.Tax, new { type = "number", @class = "form-control", placeholder = "Enter Tax", required = "required" })
                </div>
                <div class="form-group w-50">
                    <label for="exampleIsAvailable">IsAvailable</label>
                    @Html.DropDownListFor(medi => medi.IsAvailable, new SelectList(new List<Object> {
                new { Id = true, Value="Yes" },
                new { Id = false, Value="No" } }, "Id", "Value"), new { @class = "form-control" })
                </div>
                &nbsp;
                <div class="form-group w-50 text-center">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>