
@{
    ViewBag.Title = "_DoctorOptions";
}

<h2 class="mt-4">DoctorOptions</h2>

<div class="collapse navbar-collapse custom-container" id="navbarColor02">
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            @Html.ActionLink("View Appointment", "ViewAppointment", "Doctor", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Messaging", "Message", "Doctor", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("View Medicine", "ViewMedicines", "Doctor", null, new { @class = "nav-link" })
        </li>
    </ul>

    <form action="/Account/Logout" method="post" class="form-inline my-2 my-lg-0">
        <span class="nav-link text-light"> Hi @Session["Name"],</span>
        <a class="btn btn-info my-2 my-sm-0 mr-2" href="/Account/EditUser">Edit Profile</a>
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">LogOut</button>
    </form>
</div>


<style>

    .align-nav {
        height: auto; /* Adjust the height as needed */
        padding: 3px; /* Adjust the padding as needed */
        background-color: #333; /* Change the background color if necessary */
    }
</style>